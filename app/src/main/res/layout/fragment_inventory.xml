
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:src="@drawable/ic_broadsword"
                        />

                    <Spinner
                        android:layout_height="fill_parent"
                        android:layout_width="match_parent"
                        android:layout_span="3"
                        android:id="@+id/inSpinnerWeapon"
                        android:spinnerMode="dialog"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >


                    <ImageView
                        android:src="@drawable/ic_shield"
                        />

                    <Spinner
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent"
                        android:layout_span="3"
                        android:id="@+id/inSpinnerOffHand"
                        android:spinnerMode="dialog"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:src="@drawable/ic_armor_vest"
                        />
                    <Spinner
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent"
                        android:layout_span="3"
                        android:id="@+id/inSpinnerArmor"
                        android:spinnerMode="dialog"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Dmg bonus"
                        android:id="@+id/textView15" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="2"
                        android:id="@+id/inWeapDmgBonus"
                        android:layout_marginLeft="10dp" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                  >

                    <ImageView
                        android:src="@drawable/ic_coins"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="6"
                        android:id="@+id/inGold"
                        android:paddingLeft="10dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/btnAddGold"
                        />
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/btnRemoveGold"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Inventory"
                        android:id="@+id/textView18" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_column="2"
                        android:layout_span="2"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:text="Add item"
                        android:id="@+id/btnAddItem"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:inputType="textMultiLine"
                        android:hint="List of misc. items"
                        android:id="@+id/inInventory"
                        android:layout_span="4" />
                </TableRow>

            </TableLayout>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1"
                android:id="@android:id/list">
            </ListView>


        </LinearLayout>
    </ScrollView>